<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCBCBC"
    android:gravity="center"
    tools:context=".Fragment.EkleFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="İhbar Ekle"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="İhbar Sil"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ekle_fragment_addButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ekle_fragment_btn_bg"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/ekle_fragment_trashButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/ekle_fragment_btn_bg"
            android:src="@drawable/ic_trash" />

    </LinearLayout>


</RelativeLayout>