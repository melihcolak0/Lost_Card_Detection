<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sil_act_linear"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Activity.SilActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bu sayfada yalnızca kendi oluşturduğunuz ihbarları silebilirsiniz. Lütfen silmek istediğiniz kart ihbarı üzerineki Öğrenci Numarasını aşağıya giriniz."
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:textSize="15sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sil_act_inputOgrNo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:counterEnabled="true"
        android:layout_marginTop="50dp"
        app:counterMaxLength="20"
        app:counterTextAppearance="@style/CounterStyle">

        <EditText
            android:id="@+id/sil_act_editOgrNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kart sahibinin Öğrenci Numarasını Giriniz"
            android:inputType="number"
            android:maxLength="20"
            android:textColorHint="@color/KayitOlHintTextColor"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/sil_act_btnIhbarSil"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#DDC706"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="İhbarı Sil"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>